<div class="container">

<h1>我的订单</h1>
<div class="row">
  <div class="container">
      <div class="media shopping-cart-row">
        <div class="media-left">
          <img class="media-object" alt="小米手机" src="<%= image_url('1678945367352.jpeg') %>" />
        </div>
        <div class="media-body">
          <% @orders.each do |order| %>
            <h4 class="media-heading">订单号: <%= @order.name %></h4>
            <p><%= @order.p_name %></p>
            <p>数量: <%= @order.num %> 价格: <%= @order.price %></p>
            <p><span class="label label-warning"><%= @order.status %></span><%= @order.p_addr %></p>
          <% end %>
        </div>
      </div>
  </div>
</div>
