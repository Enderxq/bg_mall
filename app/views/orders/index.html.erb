<style>
.media {
  margin-top: 15px;
}
.media:first-child {
  margin-top: 0;
}
.media.shopping-cart-row {
  border-bottom: 1px solid #ccc;
}
.media.shopping-cart-row:last-child {
  border-bottom: 0;
}
.media-object {
  height: 60px;
  width: 66px;
}
</style>

<h1>我的订单</h1>
<div class="row">
  <div class="container">
    <% @orders.each do |order| %>
      <div class="media shopping-cart-row">
        <div class="media-left">
          <img class="media-object" alt="小米手机" src="<%= image_url('1678945367352.jpeg') %>" />
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= order.name %></h4>
          <p><%= order.p_name %></p>
          <p>数量: <%= order.num %> 价格: ¥<%= order.p_price %></p>
          <p><span class="label label-warning"><%= order.status %></span><%= order.p_addr %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
